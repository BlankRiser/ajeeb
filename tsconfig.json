{
  "compilerOptions": {
    "target": "es2016",
    "rootDir": "src",
    "baseUrl": "src/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": false,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true
  },
  "include": ["**/*.tsx", "**/*.ts", "setupTests.js"],
  "exclude": [
    "node_modules",
    "dist",
    "types",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.spec.ts",
    "**/*.stories.tsx",
    "**/*.stories.ts"
  ]
}
